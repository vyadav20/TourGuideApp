<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
    tools:context="com.varshayadv.tourguideapp.CapriThingsToDoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/c1" />

        <ImageView
            android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/c1"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/c2" />

        <ImageView
            android:id="@+id/c3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/c2"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/c3" />


        <ImageView
            android:id="@+id/c4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/c3"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/c4" />

        <ImageView
            android:id="@+id/c5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/c4"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/c5" />

        <ImageView
            android:id="@+id/c6"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/c5"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/c6" />

    </RelativeLayout>

</ScrollView>
