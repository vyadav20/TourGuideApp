<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
    tools:context="com.varshayadv.tourguideapp.FloranceThingsToDoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/f1" />

        <ImageView
            android:id="@+id/f2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/f1"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/f2" />

        <ImageView
            android:id="@+id/f3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/f2"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/f3" />


        <ImageView
            android:id="@+id/f4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/f3"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/f4" />

    </RelativeLayout>

</ScrollView>
